<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SyllogismValidatorWPF" x:Class="SyllogismValidatorWPF.MainWindow"
        Title="Standard Form Syllogism Validator" Height="350" Width="174" ResizeMode="NoResize">
    <Grid>
        <DataGrid x:Name="SyllogismTable" Margin="10,48,10,10" SelectionChanged="SyllogismSelectionChanged" BeginningEdit="SyllogismTable_BeginningEdit" CanUserResizeRows="False" IsReadOnly="True"/>
        <Button x:Name="SearchButton" Content="Search" Margin="108,10,10,0" VerticalAlignment="Top" Height="33" Click="SearchButton_Click" IsDefault="True"/>
        <TextBox x:Name="SearchTextBox" HorizontalAlignment="Left" Height="33" Margin="10,10,0,0" VerticalAlignment="Top" Width="93" FontSize="16" Focusable="True" VerticalContentAlignment="Center"/>
    </Grid>
</Window>
